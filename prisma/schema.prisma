// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  LEADER
  EMPLOYEE
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  REVOKED
}

enum TimeLogStatus {
  PENDING
  APPROVED
  REJECTED
}

enum TimeLogType {
  WORK
  BREAK
  LEAVE
}

enum LeaveType {
  VACATION
  SICK
  EARNED
  EMERGENCY // Added per original plan
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
}

model Organization {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  logo        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  users       User[]
  invitations OrganizationInvitation[]
  departments Department[]
  timeLogs    TimeLog[]
  leaveRequests LeaveRequest[]
  auditLogs   AuditLog[]

  @@map("organization")
}

model User {
  id             String    @id
  name           String
  email          String
  emailVerified  Boolean
  image          String?
  createdAt      DateTime
  updatedAt      DateTime
  
  // HRIS Fields
  role                  UserRole  @default(EMPLOYEE)
  requirePasswordChange Boolean   @default(false)
  joinedAt              DateTime  @default(now())
  
  // Profile Details
  address               String?
  phoneNumber           String?
  dateOfBirth           DateTime?
  position              String?
  dateHired             DateTime? @default(now())
  regularWorkHours      Float     @default(8.0)
  
  organizationId        String
  organization          Organization @relation(fields: [organizationId], references: [id])
  
  // Admin Plugin Fields
  banned                Boolean?
  banReason             String?
  banExpires            DateTime?

  // Hierarchy (Self-relation)
  managerId      String?
  manager        User?     @relation("ReportsTo", fields: [managerId], references: [id])
  subordinates   User[]    @relation("ReportsTo")

  sessions       Session[]
  accounts       Account[]
  timeLogs       TimeLog[]
  leaveBalances  LeaveBalance[]
  leaveRequests  LeaveRequest[]
  processedLeaveRequests LeaveRequest[] @relation("ProcessedBy")
  
  processedTimeLogs      TimeLog[]      @relation("TimeLogProcessedBy")
  auditLogs              AuditLog[]

  @@unique([email])
  @@map("user")
}

model LeaveBalance {
  id             String    @id @default(cuid())
  type           LeaveType
  balance        Float     @default(0.0)
  updatedAt      DateTime  @updatedAt

  userId         String
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type])
  @@map("leave_balance")
}

model LeaveRequest {
  id             String      @id @default(cuid())
  type           LeaveType
  startDate      DateTime
  endDate        DateTime
  netDays        Float       // Number of working days requested
  reason         String?
  status         LeaveStatus @default(PENDING)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  userId         String
  user           User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  // Manager who approved/rejected
  processedById  String?
  processedBy    User?       @relation("ProcessedBy", fields: [processedById], references: [id])
  processedAt    DateTime?

  @@map("leave_request")
}

model TimeLog {
  id             String        @id @default(cuid())
  startTime      DateTime      @default(now())
  endTime        DateTime?
  duration       Int?          // Store in seconds
  status         TimeLogStatus @default(PENDING)
  type           TimeLogType   @default(WORK)
  isManual       Boolean       @default(false)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  userId         String
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  organizationId String
  organization   Organization  @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  // Manager who approved/rejected
  processedById  String?
  processedBy    User?         @relation("TimeLogProcessedBy", fields: [processedById], references: [id])
  processedAt    DateTime?

  corrections    TimeCorrection[]

  @@map("time_log")
}

model TimeCorrection {
  id                String        @id @default(cuid())
  requestedStartTime DateTime?
  requestedEndTime   DateTime?
  reason            String
  status            TimeLogStatus @default(PENDING)
  processedAt       DateTime?
  processedById     String?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  timeLogId         String
  timeLog           TimeLog       @relation(fields: [timeLogId], references: [id], onDelete: Cascade)

  @@map("time_correction")
}

model OrganizationInvitation {
  id             String           @id @default(cuid())
  email          String
  role           UserRole         @default(EMPLOYEE)
  status         InvitationStatus @default(PENDING)
  token          String           @unique
  expiresAt      DateTime
  createdAt      DateTime         @default(now())
  
  organizationId String
  organization   Organization     @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@map("organization_invitation")
}

model Department {
  id             String       @id @default(cuid())
  name           String
  description    String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  
  teams          Team[]

  @@map("department")
}

model Team {
  id             String     @id @default(cuid())
  name           String
  description    String?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  
  departmentId   String
  department     Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)
  
  // The leader of this specific team
  leaderId       String?
  
  @@map("team")
}

model Session {
  id             String   @id
  expiresAt      DateTime
  token          String
  createdAt      DateTime
  updatedAt      DateTime
  ipAddress      String?
  userAgent      String?
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Admin Plugin Fields
  impersonatedBy String?

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model AuditLog {
  id             String   @id @default(cuid())
  organizationId String
  userId         String?  // Actor ID (optional to preserve log after deletion)
  userName       String   // Captured at time of action
  userEmail      String   // Captured at time of action
  action         String   // e.g., "UPDATE_SALARY", "DELETE_STAFF"
  entityType     String   // e.g., "User", "LeaveBalance"
  entityId       String?  // ID of the changed record
  oldData        Json?    // State BEFORE
  newData        Json?    // State AFTER
  ipAddress      String?
  userAgent      String?
  createdAt      DateTime @default(now())

  user           User?        @relation(fields: [userId], references: [id], onDelete: SetNull)
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@map("audit_log")
}
